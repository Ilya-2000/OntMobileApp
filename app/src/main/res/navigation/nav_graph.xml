<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_news">
    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.ontmobileapp.fragments.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_navigation_news_to_openNewsFragment"
            app:destination="@id/openNewsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.example.ontmobileapp.fragments.ScheduleFragment"
        android:label="fragment_schedule"
        tools:layout="@layout/fragment_schedule" />
    <fragment
        android:id="@+id/navigation_college"
        android:name="com.example.ontmobileapp.fragments.CollegeFragment"
        android:label="fragment_college"
        tools:layout="@layout/fragment_college" />
    <fragment
        android:id="@+id/openNewsFragment"
        android:name="com.example.ontmobileapp.fragments.OpenNewsFragment"
        android:label="fragment_open_news"
        tools:layout="@layout/fragment_open_news" />
</navigation>