<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.impact.ontmobileapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.impact.ontmobileapp.AboutActivity"
            android:parentActivityName="com.impact.ontmobileapp.MainActivity" />
        <activity
            android:name="com.impact.ontmobileapp.OpenNewsActivity"
            android:parentActivityName="com.impact.ontmobileapp.MainActivity" />
        <activity
            android:name="com.impact.ontmobileapp.SettingsActivity"
            android:parentActivityName="com.impact.ontmobileapp.MainActivity" />
        <activity android:name="com.impact.ontmobileapp.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.impact.ontmobileapp.MainActivity" />
    </application>

</manifest>